QWidget {
   font-family: "Courier New", Courier, Monaco;
}

QPushButton.item_button {
    background-color: white;
    border: 1px solid grey;
}

QDialog, QScrollArea, QLabel, QWidget.scroll_area {
    background-color: white;
}

QDialog QPushButton, QPushButton.custom_button {
    height: 30px;
    color: black;
    background-color: white;
    border: 1px solid grey;
}

QDialog QPushButton:hover, QPushButton.custom_button:hover {
    color: white;
    background-color: red;
}

QDialog QLineEdit {
    height: 30px;
    border: 1px solid gray;
}

QWidget.item_box {
    border: 1px solid gray;
}

QWidget#main_window {
    background-color: white;
}